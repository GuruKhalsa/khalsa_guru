<div class="row">
  	<div class="col-md-8 col-md-offset-2">
  		<!-- <h2 class="center inset-text">Projects</h2> -->
  		<div class='projects-container'>
	  		<div class="hexagon hexagon1"><div class="hexagon-in1"><div class="hexagon-in2"><a href="http://www.embrence.com"></a></div></div></div>

	  		<div class="hexagon hexagon2"><div class="hexagon-in1"><div class="hexagon-in3"><a href="http://www.triumpic.com"></a></div></div></div>

	  		<div class="hexagon hexagon3"><div class="hexagon-in1"><div class="hexagon-in4"><a href="http://www.itemsofexile.com"></a></div></div></div>

	  		<div class="line1"></div>
	  		<div class="line2"></div>
	  	</div>

  			<div class="home-posts">
				<% @posts.each do |post| %>
					<div class="home-post">
						<%= image_tag(post.image.url, class: "center-image") %>
						<h3 class="center"><%= link_to(post.title, post_path(post)) %><span class="title-date"><%= post.created_at.to_date.strftime("%B %d, %Y")%></span></h3>
						<%= simple_format(post.content) %>
						<% if current_user %>
						
							<%=link_to "edit", edit_post_path(post.id), :class => "post-top-right pull-right"%><br/>
							<%=link_to "delete", post_path(post.id), :method => :delete, :class => "post-top-right pull-right", :confirm => "Are you sure you want to delete this message?"%>

						<% end %>
					</div>
			<% end %>
		</div>
	</div>
</div>